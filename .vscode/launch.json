{
    "version": "0.2.0",
    "configurations": [
        { 
            "name": "Nginx Debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/release/sbin/nginx",
            "stopAtEntry": true,
            "externalConsole": false,
            "args": [
                "-c",
                "conf/nginx.conf"
            ],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make",
            "postDebugTask": "done"
        }
    ]
}